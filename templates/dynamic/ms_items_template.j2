{% extends "templates/partials/detail_view.j2" %}

{% block detail_view %} 
<hr>
<h3>About</h3>
<dl>
    <dt>
        Manuscript
    </dt>
    <dd>
        <a href="{{ data.manuscript.hit_id }}">{{ data.view_label }}</a>
    </dd>

    <dt>
        Location in Manuscript
    </dt>
    <dd>
        {{ data.locus_grp }}
    </dd>

    <dt>
        Incipit
    </dt>
    <dd>
        {{ data.incipit }}
    </dd>

    <dt>
        Explicit
    </dt>
    <dd>
        {{ data.explicit }}
    </dd>

    <dt>
        Rubric
    </dt>
    <dd>
        {{ data.rubric }}
    </dd>

    <dt>
        Work
    </dt>
    {% for x in data.title_work %}
    <dd>
        <a href="{{ x.hit_id }}.html">{{ x.title }}</a>
    </dd>
    {% endfor %}
</dl>

<h3>Hands</h3>
<ul>
    {% for x in data.hands_role %}
    {% set hand = x.hand|first %}
    {% set role = x.role|first %}
    <li>
        <a href="hit_hands__{{ hand.id }}.html">{{ hand.value }}</a>; {{ role.value }}
    </li>
    {% endfor %}

</ul>

{% endblock detail_view %}
